@model Course_Work.Models.OfferViewModel

@{
    ViewBag.Title = "Create";
}


<style>


    #shadow {
        -webkit-box-shadow: 0px 5px 112px 0px black;
        -moz-box-shadow: 0px 5px 112px 0px black;
        box-shadow: 0px 5px 112px 0px black;
    }
</style>
<body style=" width:100%;   background-image: url(https://images.pexels.com/photos/3747145/pexels-photo-3747145.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260);
        background-repeat: no-repeat;
        background-size:cover;
">
    <div class="container">
        <div id="shadow" style="display: block;background:rgba(255, 255, 255, 1);width:70%; padding:3%; margin: 0 auto; ">
            @using (Html.BeginForm("Create", "Multi", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <h4>Нова Вакансія</h4>
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        <label class="control-label col-md-2">Заголовок</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Опис</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Контактний Телефон</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserPhone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserPhone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Зарплата</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Пошта</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group ">
                        <label class="control-label col-md-2">Категорія</label>
                        <div class="col-md-10 ">
                            @Html.DropDownListFor(model => model.categoryId, Model.Categories, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="control-label col-md-2">Місто</label>
                        <div class="col-md-10 ">
                            @Html.DropDownListFor(model => model.cityId, Model.Cities, new { @class = "form-control select2" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Картинка</label>
                        <div class="col-md-10">
                            <input type="file" name="someFile" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

<script>
    $('.select2').select2();
</script>
